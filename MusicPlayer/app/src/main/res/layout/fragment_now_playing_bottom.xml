<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.NowPlayingBottomFragment">

    <RelativeLayout
        android:id="@+id/card_bottom_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_tab_main"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/bottom_album_art"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image_default"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/skip_next_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_pause_miniPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_toStartOf="@+id/skip_next_bottom"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            app:fabSize="mini"
            android:foreground="@drawable/fab_border"
            app:backgroundTint="@android:color/transparent"
            app:tint="@color/white"
            app:elevation="3dp"
            app:pressedTranslationZ="1dp"/>
        <TextView
            android:id="@+id/song_name_miniPlayer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Song name"
            android:maxWidth="180dp"
            android:textSize="18dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/cardView"/>
        <TextView
            android:id="@+id/song_artist_miniPlayer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:maxWidth="180dp"
            android:textSize="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white_faint"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/cardView"
            android:layout_below="@+id/song_name_miniPlayer"/>
    </RelativeLayout>

</FrameLayout>